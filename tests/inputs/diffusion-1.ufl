T=state.scalar_fields["Tracer",n]
mu=state.tensor_fields["TracerDiffusivity",c]

t=Coefficient(T)
p=TrialFunction(T)
q=TestFunction(T)
z=Coefficient(mu)

M=p*q*dx
d=-grad(q)[i]*z[i,j]*grad(p)[j]*dx
#d=-dot(dot(grad(q),z),grad(p))*dx

A=M-0.5*d
rhs=action(M+0.5*d,t)
tnew=solve(A,rhs)

state.scalar_fields["Tracer",n+1]=tnew
